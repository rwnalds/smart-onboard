{
  "name": "extension",
  "displayName": "Extension",
  "version": "0.0.1",
  "description": "Live sales assistant",
  "author": "ronalds.palacis@gmail.com",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.81.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "ws": "^8.18.3",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "activeTab",
      "storage"
    ],
    "externally_connectable": {
      "matches": [
        "http://localhost:3000/*",
        "https://localhost:3000/*"
      ]
    }
  },
  "trustedDependencies": [
    "@parcel/watcher",
    "@swc/core"
  ]
}
